{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}

<main id="main" class="main">
    <h1>Evenement</h1>


    <table class="table">
        <tbody>
            <tr>
                <th>Ide</th>
                <td>{{ evenement.ide }}</td>
            </tr>
            <tr>
                <th>TypeEvent</th>
                <td>{{ evenement.typeEvent }}</td>
            </tr>
            <tr>
                <th>Chanteur</th>
                <td>{{ evenement.chanteur }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ evenement.adresse }}</td>
            </tr>
            <tr>
                <th>Date Event</th>
                <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d' ) : '' }}</td>
            </tr>

            <tr>
                <th>Date Fin Event</th>
                <td>{{ evenement.dateend ? evenement.dateend|date('Y-m-d  ' ) : '' }}</td>
            </tr>

            <tr>
                <th>PrixE</th>
                <td>{{ evenement.prixE }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{asset('assets/img/'~evenement.image)}}">
                </td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_evenement_index') }}"  class="btn btn-success" >Back To list </a>

    <a href="{{ path('app_evenement_edit', {'ide': evenement.ide}) }}"  class="btn btn-danger" >Modifier</a>

    {{ include('evenement/_delete_form.html.twig') }}

</main>
{% endblock %}
