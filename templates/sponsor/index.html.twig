{% block title %}Sponsor {% endblock %}

{% block body %}

<main id="main" class="main">

    <h1>Gestion Sponsor </h1>
    <a href="{{ path('app_sponsor_new') }}"  class="btn btn-info">Ajouter</a>
    <a href="{{ path('lists') }}" class="btn btn-danger" >To PDF</a>



