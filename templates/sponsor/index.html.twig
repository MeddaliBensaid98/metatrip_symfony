{% extends 'base.html.twig' %}

{% block title %}Sponsor index{% endblock %}

{% block body %}

<main id="main" class="main">

    <h1>Sponsor index</h1>
    <a href="{{ path('app_sponsor_new') }}"  class="btn btn-info">Ajouter</a>
    <table class="table">
        <thead>
            <tr>
                <th>Ids</th>
                <th>Nomsponsor</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Image</th>
                <th>DateSp</th>
                <th>PrixSp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sponsor in sponsors %}
            <tr>
                <td>{{ sponsor.ids }}</td>
                <td>{{ sponsor.nomsponsor }}</td>
                <td>{{ sponsor.tel }}</td>
                <td>{{ sponsor.email }}</td>
                <td>{{ sponsor.image }}</td>
                <td>{{ sponsor.dateSp ? sponsor.dateSp|date('Y-m-d') : '' }}</td>
                <td>{{ sponsor.prixSp }}</td>
                <td>
                    <a href="{{ path('app_sponsor_show', {'ids': sponsor.ids}) }}" class="btn btn-danger"  >Afficher</a>
                    <a href="{{ path('app_sponsor_edit', {'ids': sponsor.ids}) }}" class="btn btn-danger"  >Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




</main>
{% endblock %}
