{% extends 'base.front.html.twig' %}

{% block title %}New ReservationHotel{% endblock %}

{% block body %}
    <!-- ======================= Start Add Hotel ===================== -->
    <section class="dashboard gray-bg padd-0 mrg-top-50">
        <div class="container-fluid">
            <div class="row">


                <div class="col-lg-10 col-md-10 col-sm-9 col-lg-push-2 col-md-push-2 col-sm-push-3">
                    <div class="row mrg-0 mrg-top-20">
                        <div class="tr-single-box">
                            <div class="tr-single-header">
                                <h3 class="dashboard-title">Reserver voiture</h3>
                            </div>
                            <div class="tr-single-body">
                                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

                                <form id="msform">
                                    <!-- progressbar -->
                                    <ul id="progressbar">
                                        <li class="active">Add Information</li>
                                        <li>Confirmation</li>
                                    </ul>
                                    <!-- fieldsets -->

                                    <fieldset>

                                        <div class="text-center">
                                            <h2 class="fs-title">Fill Basic Information</h2>
                                            <h3 class="fs-subtitle">This is step 1</h3>
                                        </div>
                                        <div class="row">








                                            <div class="col-xs-6">
                                                <label>trajet</label>
                                                {{ form_widget(form.trajet, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.trajet,{'attr':{'class':'text-danger'}}) }}



                                            <div class="col-xs-6">
                                                <label>Chauffeur</label>
                                                {{ form_widget(form.idch, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.idch,{'attr':{'class':'text-danger'}}) }}


                                            <div class="col-xs-6">
                                                <label> Voiture</label>
                                                {{ form_widget(form.idvoit, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.idvoit,{'attr':{'class':'text-danger'}}) }}



                                            <div class="col-xs-6">
                                                <label>Client</label>
                                                {{ form_widget(form.idu, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.idu,{'attr':{'class':'text-danger'}}) }}


                                            <div class="col-xs-6">
                                                <label>Prix </label>
                                                {{ form_widget(form.prixRent, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.prixRent,{'attr':{'class':'text-danger'}}) }}











                                        </div>

                                        {{ form_widget(form.next, {'attr': {'class': 'next action-button'}}) }}


                                    </fieldset>

                                    {{ form_end(form) }}

                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- ======================= End  Add Hotel===================== -->
    {{ include('reservations_hotels/_form.html.twig') }}

    <a href="{{ path('app_reservations_hotels_index') }}">back to list</a>
{% endblock %}
