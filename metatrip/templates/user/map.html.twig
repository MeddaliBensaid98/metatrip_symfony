    </head>
    <style>
        html, body { height: 100% }
        #map{
       width: 109%;
    height: 80%;
    position: fixed;
    outline: none;
    margin-left: -4.5%;
    /* margin-right: 1.5%; */
    margin-top: 1.5%;
        
        }
    </style>

     <body onload="initialize()">
        <div class="container">
        <div id="map" ></div></div>
    
    </body>
     
</html>
<script type="text/javascript">
    function initialize() {
        var map = L.map('map').setView([ 33.892166, 9.561555499999997], 5);  
        var osmLayer = L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {  
            attribution: 'Â© METATRIP',
            maxZoom: 19
        });

 {% for c in voyageCoord %}
 
    L.marker([{{c.latitude}},{{c.longitude}}]).
    bindPopup("<b style='color:blue'>Pays:</b> {{c.pays}}<br> <br> <img src='{{asset('assets/img/'~c.imagePays)}}'>  <br><br><b style='color:blue'>Compagnie:</b> {{c.airline}}  <br><br><b style='color:blue'>Etat voyage:</b> {{c.etatvoyage}} <br><br><b style='color:blue'>Prix billet:</b>{{c.prixBillet}}DT").on('click', markerOnClick).addTo(map);
      
         {% endfor %}
     
      function markerOnClick(e)
{

map.closePopup();
    var myWindow = window.open("", "MsgWindow", "width=500,height=520");
        let popup = e.target.getPopup();
        var content = popup.getContent();

   myWindow.document.write(content);
  

}

        map.addLayer(osmLayer);

     }
</script>
</html>
 
{% endblock %}