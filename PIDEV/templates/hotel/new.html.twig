{% extends 'base.admin.html.twig' %}


{% block title %}New Hotel{% endblock %}

{% block body %}

    <!-- ======================= Start Add Hotel ===================== -->
    <section class="dashboard gray-bg padd-0 mrg-top-50">
        <div class="container-fluid">
            <div class="row">

                
                    <!-- /. NAV SIDE  -->
                </div>

                <div class="col-lg-10 col-md-10 col-sm-9 col-lg-push-2 col-md-push-2 col-sm-push-3">
                    <div class="row mrg-0 mrg-top-20">
                        <div class="tr-single-box">
                            <div class="tr-single-header">
                                <h1 class="dashboard-title">Add Hotel</h1>
                            </div>
                            <div class="tr-single-body">
                                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
     {% set flashbag_notices =app.session.flashbag.get('notice') %}
     {% if flashbag_notices is not empty    %}
     <div class="alert alert-success" role="alert">
     {%for notice in flashbag_notices %}
     <li>{{notice}}</li>
     {% endfor %}
     </div>
     {% endif %}
                                <form id="msform">
                                    <!-- progressbar -->
                                    <ul id="progressbar">
                                        <li class="active">Add Information</li>
                                        
                                    </ul>
                                 <!-- fieldsets -->

                                    <fieldset>

                                        <div class="text-center">
                                            <h2 class="fs-title">Fill Basic Information</h2>
                                            
                                        </div>
                                        <div class="row">

                                            <div class="col-xs-6">
                                                <label>Nom Hotel</label>
                                                {{ form_widget(form.nomHotel, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.nomHotel,{'attr':{'class':'text-danger'}}) }}

                                               <div class="col-xs-6">
                                                <label>Nombre etoile</label>
                                                {{ form_widget(form.nbEtoiles, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.nbEtoiles,{'attr':{'class':'text-danger'}}) }}
                                            <div class="col-xs-6">
                                                <label>Adresse</label>
                                                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.adresse,{'attr':{'class':'text-danger'}}) }}



                                           


                                            <div class="col-xs-6">
                                                <label>Image</label>
                                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}

                                            </div>
                                            {{ form_errors(form.image,{'attr':{'class':'text-danger'}}) }}


                                           

                                            

















                                        </div>

                                       

                                    </fieldset>

                                       {{ form_widget(form.add, {'attr': {'class': 'btn theme-btn'}}) }}

                     {{ form_rest(form) }}
                                </form>
                                

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- ======================= End  Add Hotel===================== -->




    {{ include('hotel/_form.html.twig') }}

    <a href="{{ path('app_hotel_index') }}">back to list</a>
{% endblock %}
