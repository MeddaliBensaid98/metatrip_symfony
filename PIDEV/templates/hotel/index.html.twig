{% extends 'base.admin.html.twig' %}


{% block title %}Hotel index{% endblock %}

{% block body %}




    <!-- ======================= Start Invoice ===================== -->
    <section class="dashboard gray-bg padd-0 mrg-top-50">
        <div class="container-fluid">
            <div class="row">

               
                    <!-- /. NAV SIDE  -->
                </div>

                <div class="col-lg-10 col-md-10 col-sm-9 col-lg-push-2 col-md-push-2 col-sm-push-3">
                    <div class="row mrg-0 mrg-top-20">
                        <div class="tr-single-box">
                            <div class="tr-single-header">
                                <h1 class="dashboard-title">View hotel</h1>
                            </div>
                            
                            <div class="tr-single-body">

                                <div class="detail-wrapper padd-top-30 padd-bot-30">

                                   

                                    <div class="row mrg-0">
                                        <div class="col-md-6">
                                            <div id="logo"><img src="assets/img/logo.png" class="img-responsive" alt=""></div>
                                        </div>


                                    </div>

                                    <div class="row  mrg-0 detail-invoice">
                                        <input type="text" id="search" class="form-control" placeholder="Search">
                                        <section class="jumbotron text-center">
                                            <div class="container">
                                        <div class="col-md-12">
                                        

                                            <h4>Metatrip Liste Hotel</h4>
                                        </div>
                                        <hr />
                                         <br><br>
    
                                        <a href="{{ path('app_hotel_new') }}" class="btn theme-btn">Create new</a>

                                        <hr>

                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                            <div class="invoice-table">
                                                <div class="table-responsive">
                                                       <table id="tablevhambre" class="table table-striped table-advance table-hover">
                                                           <script src="{{ asset('js/jquery.min.js') }}"></script>
                                                           <table id="tableac" class="table table-striped table-advance table-hover">
                                                        <thead>
                                                        <tr>
                                                         <th>Image</th>
                                                            
                                                            <th>Nom hotel</th>
                                                            <th>Nombre  etoile</th>
                                                            <th>Adresse</th>
                                                           


                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for hotel in hotels %}

                                                            <tr>
                                                                <td><img alt="" class="img-fluid rounded-circle shadow-lg" src="{{asset('assets/img/hotel/')}}{{ hotel.image }}" width="110" height="52"></td>
                                                                <td>{{ hotel.nomHotel }}</td>
                                                                <td>{{ hotel.nbEtoiles }}</td>
                                                                <td>{{ hotel.adresse}}</td>
                                                               

                                                                
                                                             
                                                               <td>
                                                                    <a href="{{ path('app_hotel_show', {'idh': hotel.idh}) }}" class="btn theme-btn">Show </a>
                                                                    <a href="{{ path('app_hotel_edit', {'idh': hotel.idh}) }}" class="btn theme-btn">Edit </a>
                                                                    
                                                                
                                                                </td>
                                                            </tr>

                                                        {% else %}
                                                            <tr>
                                                                <td colspan="4">no records found</td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                           <script>
                                                               $(document).ready(function(){
                                                                   $('#search').keyup(function(){
                                                                       search_table($(this).val());
                                                                   });
                                                                   function search_table(value){
                                                                       $('#tableac tbody tr').each(function(){
                                                                           var found = 'false';
                                                                           $(this).each(function(){
                                                                               if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                                                                               {
                                                                                   found = 'true';
                                                                               }
                                                                           });
                                                                           if(found == 'true')
                                                                           {
                                                                               $(this).show();

                                                                           }
                                                                           else
                                                                           {
                                                                               $(this).hide();

                                                                           }
                                                                       });
                                                                   }
                                                               });
                                                           </script>
                                                    </table>

                                                    
                                                </div>
                                                 



                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- ======================= End  Invoice===================== -->


















  {{ flasher_render() }}
   
{% endblock %}
