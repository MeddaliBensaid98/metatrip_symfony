{% extends 'base.front.html.twig' %}

{% block body %}

    <!-- ====================== Popular Destinations ================= -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="heading">
                        <span class="theme-cl">Top Destinations</span>
                        <h1>Reserver la meilleur voiture maintenant</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Single Destination -->
                {% for voiture in voitures %}

                    <div class="col-md-4 col-md-6">
                        <article class="destination-box style-1">
                            <div class="destination-box-image">
                                <figure>
                                    <a href="{{ path('app_voitures_show', {'idvoit': voiture.idvoit}) }}">
                                        <img src="{{ asset('assets/img/destination/'~voiture.imageV)}}" class="img-responsive listing-box-img" alt="" />

                                        <div class="list-overlay"></div>
                                    </a>
                                    <div class="discount-flick">-12%</div>
                                    <h4 class="destination-place">
                                        <a href="{{ path('app_voitures_show', {'idvoit': voiture.idvoit}) }}">{{ voiture.modele }} </a>
                                    </h4>
                                    <a href="#" class="list-like left"><i class="ti-heart"></i
                                        ></a>
                                </figure>
                            </div>

                            <div class="entry-meta">
                                <div class="meta-item meta-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half"></i>
                                </div>
                                <div class="meta-item meta-comment fl-right">
                                    <span class="real-price padd-l-10 font-bold">{{ voiture.matricule }} </span>
                                </div>
                            </div>

                            <div class="inner-box">
                                <div class="box-inner-ellipsis">
                                    <h4 class="entry-location">


                                            <a href="{{ path('app_reservation_voitures_new') }}">Reserver</a>
                                    </h4>
                                    <div class="price-box">
                                        <div class="destination-price fl-right">
                                            <a href="#"><i class="theme-cl ti-arrow-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>

                {% endfor %}





            </div>
        </div>
    </section>
    <!-- ====================== Popular Destinations ================= -->

{% endblock %}