{% extends 'base.admin.html.twig' %}


{% block title %}Chambre{% endblock %}

{% block body %}


    <!-- ======================= Start Invoice ===================== -->
    <section class="dashboard gray-bg padd-0 mrg-top-50">
        <div class="container-fluid">
            <div class="row">

               
                    <!-- /. NAV SIDE  -->
                </div>

                <div class="col-lg-10 col-md-10 col-sm-9 col-lg-push-2 col-md-push-2 col-sm-push-3">
                    <div class="row mrg-0 mrg-top-20">
                        <div class="tr-single-box">
                            <div class="tr-single-header">
                                <h1 class="dashboard-title">View room</h1>
                            </div>
                            <div class="tr-single-body">

                                <div class="detail-wrapper padd-top-30 padd-bot-30">

                                    <div class="row text-center">
                                        <div class="col-md-12">
                                            <a href="javascript:window.print()" class="btn theme-btn">Print this invoice</a>


                                        </div>
                                    </div>

                                    <div class="row mrg-0">
                                        <div class="col-md-6">
                                            <div id="logo"><img src="assets/img/logo.png" class="img-responsive" alt=""></div>
                                        </div>


                                    </div>

                                    <div class="row  mrg-0 detail-invoice">

                                        <div class="col-md-12">
                                            <h4>Metatrip liste chambre</h4>
                                        </div>


                                        <hr />

                                    
                                        <hr>

                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                           
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-advance table-hover">
                                                    <script src="{{ asset('js/jquery.min.js') }}"></script>
                                                      <table id="tableac" class="table table-striped table-advance table-hover">
                                                        <thead>
                                                        <tr>
                                                         <th>Image</th>
                                                           
                                                            <th>Numero</th>
                                                            <th>Type</th>
                                                            <th>Etat</th>

                                                           
                                                            <th>Hotel</th>
                                                            <th>Prix</th>


                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        <tr>
                                                            <td><img alt="" class="img-fluid rounded-circle shadow-lg" src="{{asset('assets/img/hotel/')}}{{chambre.image}}" width="110" height="52"></td>
                                                            <td>{{ chambre.numc }}</td>
                                                            <td>{{ chambre.type }}</td>
                                                            <td>{{ chambre.etat }}</td>
                        
                                                            <td>{{ chambre.idh }}</td>
                                                            <td>{{ chambre.prixc }}</td>

                                                        </tr>

                                                        </tbody>
                                                    </table>
                                                </div>


                                                <div class="row text-center">
                                                    <div class="col-md-12">
                                                        <a href="{{ path('app_chambre_edit', {'idc': chambre.idc}) }}" class="btn theme-btn">Edit </a>


                                                    </div>
                                                </div>
                                                <br>

                                                <div class="row text-center ">
                                                    <div class="col-md-12">
                                                        <a href="{{ path('app_chambre_delete', {'idc': chambre.idc}) }}" class="btn theme-btn">Delete </a>



                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- ======================= End  Invoice===================== -->


    <a href="{{ path('app_chambre_index') }}">back to list</a>


{% endblock %}
